<!DOCTYPE html>
<html>
  <head>
    <title>SimpleSns</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav>
      <%# title %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <a class="navbar-brand" href="/">
            <h3>Simple SNS</h3>
          </a>
      <%# title %>
          <%#　header %>
          <!-- ログイン中なら、user情報を表示 -->
          <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
              <ul class="navbar-nav ml-auto mr-sm-2 mt-2 mt-lg-0">
                <li class="nav-item active mr-3">
                  <%= link_to 'アカウント確認', current_user , :class => "nav-link"%>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to "ログアウト", sign_out_path , :class => "nav-link text-danger" %>
                </li>
              </ul>
            </div>
          <% else %>
          <%# 非ログイン時の処理 %>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav ml-auto mr-sm-2 mt-2 mt-lg-0">
              <li class="nav-item active mr-3">
                <%= link_to 'ログイン', new_user_session_path , :class => "nav-link" %>
              </li>
              <li class="nav-item mr-3">
                <%= link_to '新規登録', new_user_registration_path , :class => "nav-link text-danger" %>
              </li>
            </ul>
          </div>
        <% end %>
        </div>
      </nav>
    </nav>
  </header>
  <%#　header %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</body>
</html>
